<?xml version="1.0"?>
<config>
    <sections> 
        <testsection translate="label" module="weblog">
        <class>separator-top</class>
            <label>New Test Section</label>
            <tab>customer</tab>
            <sort_order>130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <weblog translate="label">
                    <label>Test Group</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                <fields>
                  <start_date translate="label">
                   <label>Sale Start Date</label>
                   <frontend_type>text</frontend_type> <!-- Use text instead of "myDateSelection" -->
                   <frontend_model>weblog/adminhtml_system_config_date</frontend_model> <!-- Call a module specific renderer model -->
                   <sort_order>1</sort_order>
                   <show_in_default>1</show_in_default>
                   <show_in_website>1</show_in_website>
                   <validate>required-entry</validate> <!-- Optional -->
                   <show_in_store>1</show_in_store>
                  </start_date>
                </fields>
                   <fields>
                    <start_time>
                        <label>Sale Start Time</label>
                        <frontend_type>time</frontend_type>
                        <sort_order>2</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                    
                    </start_time>
                </fields> 
                 <fields>
                  <end_date translate="label">
                   <label>Sale End Date</label>
                   <frontend_type>text</frontend_type> <!-- Use text instead of "myDateSelection" -->
                   <frontend_model>weblog/adminhtml_system_config_date</frontend_model> <!-- Call a module specific renderer model -->
                   <sort_order>3</sort_order>
                   <show_in_default>1</show_in_default>
                   <show_in_website>1</show_in_website>
                   <validate>required-entry</validate> <!-- Optional -->
                   <show_in_store>1</show_in_store>
                  </end_date>
                </fields>
                 <fields>
                    <end_time>
                        <label>Sale End Time</label>
                        <frontend_type>time</frontend_type>
                        <sort_order>4</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                    
                    </end_time>
                </fields> 
                     <fields>
                        <is_sale>
                            <label>If listed as sale</label>
                            <frontend_type>select</frontend_type>
                            <source_model>weblog/words</source_model> 
                            <sort_order>99</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                       </is_sale>
                    </fields>
                </weblog>
                </groups>
            </testsection>
    </sections>
</config>